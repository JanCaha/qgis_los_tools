{
    "terminal.integrated.env.linux": {
        "PYTHONPATH": "/usr/share/qgis/python/plugins:/usr/share/qgis/python:${workspaceFolder}"
    },
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true
    },
    "python.analysis.extraPaths": [
        "/usr/share/qgis/python/plugins",
        "/usr/share/qgis/python"
    ],
    "pylint.args": [
        "--ignore=W293,W504",
        "--disable=E0611",
        "--max-line-length=160"
    ],
    "flake8.args": [
        "--ignore=W293,W504",
        "--max-line-length",
        "160"
    ],
    "mypy-type-checker.args": [
        "--follow-imports=silent",
        "--ignore-missing-imports",
        "--show-column-numbers",
        "--no-pretty",
        "--no-strict-optional"
    ],
    "svg.preview.background": "dark-transparent",
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.pytestEnabled": true
}